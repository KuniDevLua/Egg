t.TextScaled = true
t.BackgroundTransparency = 1

local s = Instance.new("TextLabel", box)
s.Size = UDim2.new(1, 0, 0, 30)
s.Position = UDim2.new(0, 0, 0.5, 0)
s.Text = "Loading..."
s.Font = Enum.Font.Gotham
s.TextScaled = true
s.TextColor3 = Color3.new(1, 1, 1)
s.BackgroundTransparency = 1

wait(2)
loadGui:Destroy()

